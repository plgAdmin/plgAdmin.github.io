<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" type="text/css" href="../../../modules/layui-master/dist/css/layui.css" />

    <title>面包屑导航</title>
    <style>
      body {
        padding: 10px;
      }
    </style>
    <script src="../../../modules/jquery/jquery.js"></script>
    <script src="../../../modules/layui-master/dist/layui.all.js"></script>
    <script src="../../../core/plgcore.js"></script>
    <script src="../../../components/PlgBreadCrumb/codebase/PlgBreadCrumb.js"></script>

</head>

<body>
    <span class="layui-breadcrumb" lay-separator="|">
        <a href="">娱乐</a>
        <a href="">八卦</a>
        <a href="">体育</a>
        <a href="">搞笑</a>
        <a href="">视频</a>
        <a href="">游戏</a>
        <a href="">综艺</a>
    </span>

    <div id="testDemo">

    </div>
    <script>
        var config = {
            renderer: 'testDemo',
            separator: '',  // 分隔符，默认是‘/’ 
            items: [
                {
                    name: '藏青导航',
                    href: '#'
                },
                {
                    name: '产品',
                    href: '#'
                },
                {
                    name: '大数据',
                    href: '#'
                },
                {
                    name: '解决方案',
                    href: '#'
                },
                {
                    name: '社区',
                    href: '#'
                }
            ]};

        var plg = new PlgBreadCrumb(config);
      </script>
</body>

</html>