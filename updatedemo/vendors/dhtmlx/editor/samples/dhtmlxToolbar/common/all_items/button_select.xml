<?xml version="1.0"?>
<toolbar>
	<!-- text, tooltip, action -->
	<item id="new" type="buttonSelect" img="new.gif" text="New" title="Tooltip here" action="myFunction">
		<!-- userdata for select item -->
		<userdata name="my_data_name">my_data_value</userdata>
		<userdata name="more_info">new_value</userdata>
		<!-- listed option -->
		<item type="button" id="new_text" img="text_document.gif" action="myFunction">
			<itemText>Text Document</itemText>
			<!-- userdata for listed option -->
			<userdata name="list_option_data">list_option_value</userdata>
			<userdata name="option_info">option_value</userdata>

		</item>
		<item type="button" id="new_excel" text="Stylesheet" img="stylesheet.gif" action="myFunction"/>
		<item type="button" id="new_db" text="Database" img="database.gif" action="myFunction" enabled="false"/>
		<item type="button" id="new_pp" text="Presentation" img="presentation.gif"  action="myFunction" enabled="false"/>
		<item type="separator"/>
		<item type="button" id="new_other" text="Other" img="other.gif" action="myFunction"/>
	</item>
	<!-- icon only -->
	<item id="save" type="buttonSelect" img="save.gif" openAll="true" renderSelect="false">
		<item type="button" id="save_all" text="Save all"/>
		<item type="button" id="save_current" text="Save current"/>
	</item>
	<item type="separator"/>
	<!-- disabled -->
	<item id="print" type="buttonSelect" imgdis="print_dis.gif" title="Tooltip here" enabled="false"/>
	<item id="copy" type="buttonSelect" imgdis="copy_dis.gif" enabled="false"/>
	<!-- hidden -->
	<item id="paste" type="buttonSelect" img="paste.gif" hidden="true"/>
	<item type="separator"/>
	<!-- select mode -->
	<item id="edit" type="buttonSelect" img="new.gif" text="Select" mode="select" selected="edit_paste" width="95">
		<item type="button" id="edit_cut" text="Cut" img="cut.gif"/>
		<item type="button" id="edit_copy" text="Copy" img="copy.gif"/>
		<item type="button" id="edit_paste" text="Paste" img="paste.gif"/>
	</item>
</toolbar>
